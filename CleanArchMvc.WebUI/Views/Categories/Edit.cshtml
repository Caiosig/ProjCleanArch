@model CleanArchMvc.Application.DTOs.CategoryDTO

@{
    ViewData["Title"] = "Edit Category";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <hr />
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group d-flex align-items-center mb-3">
                <label asp-for="Name" class="control-label col-sm-3" style="margin: 0; font-weight: bold;"></label>
                <input asp-for="Name" class="form-control me-2" style="width: 70%;" />
                <span asp-validation-for="Name" class="text-danger ms-2"></span>
            </div>
            <div class="form-group" style="padding: 5px">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>